<?php

class TestCase_Crawler_RTHK_findLinksIn extends UnitTestCase
{

    function __construct()
    {
        $this->label = 'Crawler_RTHK::findLinksIn test (listing.html)';
    }

    function testCrawlLinksIn()
    {
        $body = file_get_contents(__DIR__ . '/data/listing.rss');
        $links = array_values(Crawler_RTHK::findLinksIn($body));
        sort($links);
        $expected_links = json_decode(file_get_contents(__DIR__ . '/data/listing.json'), TRUE);
        $this->assertIdentical($links, $expected_links, 'Crawling links');
    }

}